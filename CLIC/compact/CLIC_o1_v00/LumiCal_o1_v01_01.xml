<!-- 
     LumiCal parameters for ILD 
-->


<lccdd>


  <readouts>
    <readout name="LumiCalCollection">
      <segmentation type="CartesianGridXY" grid_size_x="0.35*cm" grid_size_y="0.35*cm" />
      <id>system:8,layer:8,barrel:3,layer:8,slice:5,x:32:-16,y:-16</id>
    </readout>
  </readouts>


  <display>
    <vis name="LumiCalVis"  alpha="0.5"  r="0.7" g="0.7"  b="0.0" showDaughters="true"  visible="true"/>
  </display>

  <detectors>

    <detector name="LumiCal" type="LumiCal_o1_v01" vis="LumiCalVis"
	      id="13" 
	      readout="LumiCalCollection" insideTrackingVolume="false" >

      <parameter crossingangle="CrossingAngle" />
      
      <dimensions inner_r = "100*mm"
		  inner_z = "2654.2*mm"
		  outer_r = "290.0*mm"
		  modules = "12"
		  phi_sectors = "4"
		  r_sectors = "64"
		  phi_gap = "2*mm"
		  r_gap = "2*mm" />

      
      <layer repeat="40" vis="SeeThrough">
	<slice material = "TungstenDens24" thickness = "3.5*mm"  vis="BCLayerVis1"                    />
	<slice material = "Air"            thickness = "0.25*mm"                                      />
	<slice material = "Silicon"        thickness = "0.32*mm" vis="BCLayerVis2"  sensitive = "yes" />
	<slice material = "Polystyrene"    thickness = "0.2*mm"  vis="BCLayerVis3"                    />
      </layer>
      <!--   (+ 3.5 0.25 0.32 0.2)  -->
    </detector>
  </detectors>
</lccdd>
