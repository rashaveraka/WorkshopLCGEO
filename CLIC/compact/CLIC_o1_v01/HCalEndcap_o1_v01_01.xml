<lccdd>
    
    <define>
      <constant name="HCalEndcap_cutout_layers" value="- floor( -HCalEndcap_zcutout / HCalEndcap_layer_thickness)"/>
    </define>
        
    
    <!--  Definition of the readout segmentation/definition  -->
    <readouts>
        <readout name="HCalEndcapHits">
            <segmentation type="CartesianGridXY" grid_size_x="3.5" grid_size_y="3.5" />
            <id>system:8,barrel:3,module:4,layer:6,slice:5,x:32:-16,y:-16</id>
        </readout>
    </readouts>
    
    <!--  Includes for sensitives and support                -->
    <detectors>
        
        <detector name="HCalEndcap" type="HCalEndcap_o1_v01" id="15" readout="HCalEndcapHits" vis="HCALVis" >
            
            <comment>Hadronic Calorimeter Endcap</comment>
            
            <envelope vis="HCALVis">
                <shape type="BooleanShape" operation="Subtraction" material="Air">
                    <shape type="BooleanShape" operation="Subtraction">
                        <shape type="PolyhedraRegular"  numsides="HCalEndcap_outer_symmetry" rmin="0" rmax="HCalEndcap_outer_radius" dz="2.0*HCalEndcap_max_z"/>
                        <shape type="PolyhedraRegular"  numsides="HCalEndcap_outer_symmetry" rmin="0" rmax="HCalEndcap_outer_radius+env_safety" dz="2.0*HCalEndcap_min_z"/>
                    </shape>
                    <shape type="Box" dx="HCalEndcap_inner_radius" dy="HCalEndcap_inner_radius" dz="HCalEndcap_max_z + 2.0*env_safety"/>
                    <rotation x="0*deg" y="0*deg" z="-90*deg+180*deg/HCalEndcap_outer_symmetry"/>
                </shape>
                <rotation x="0*deg" y="0*deg" z="90*deg-180*deg/HCalEndcap_outer_symmetry"/>
            </envelope>
            
            
            <dimensions numsides="(int) HCalEndcap_outer_symmetry" zmin="HCalEndcap_min_z" rmin="HCalEndcap_inner_radius" rmax="HCalEndcap_outer_radius" rmin2="HCalEndcap_rcutout" z2="HCalEndcap_cutout_layers * HCalEndcap_layer_thickness"/>
            <layer repeat="HCalEndcap_cutout_layers" gap="HCalEndcap_rcutout" vis="HCalEndcapLayerVis">
              <slice material="Steel235" thickness="19*mm" vis="HCalAbsorberVis"/>
              <slice material="Steel235" thickness="0.5*mm" vis="HCalAbsorberVis"/>
              <slice material="Polystyrene" thickness="3*mm" sensitive="yes" limits="cal_limits" vis="HCalSensorVis"/>
              <slice material="Copper" thickness="0.1*mm" vis="HCalCopperVis"/>
              <slice material="PCB" thickness="0.7*mm" vis="HCalPCBVis"/>
              <slice material="Steel235" thickness="0.5*mm" vis="HCalAbsorberVis"/>
              <slice material="Air" thickness="2.7*mm" vis="InvisibleNoDaughters"/>
            </layer>
            <layer repeat="HCalEndcap_layers - HCalEndcap_cutout_layers " vis="HCalEndcapLayerVis">
              <slice material="Steel235" thickness="19*mm" vis="HCalAbsorberVis"/>
              <slice material="Steel235" thickness="0.5*mm" vis="HCalAbsorberVis"/>
              <slice material="Polystyrene" thickness="3*mm" sensitive="yes" limits="cal_limits" vis="HCalSensorVis"/>
              <slice material="Copper" thickness="0.1*mm" vis="HCalCopperVis"/>
              <slice material="PCB" thickness="0.7*mm" vis="HCalPCBVis"/>
              <slice material="Steel235" thickness="0.5*mm" vis="HCalAbsorberVis"/>
              <slice material="Air" thickness="2.7*mm" vis="InvisibleNoDaughters"/>
            </layer>
            
            
        </detector>
        
    </detectors>
    
    
    
    
    
    
    
</lccdd>


