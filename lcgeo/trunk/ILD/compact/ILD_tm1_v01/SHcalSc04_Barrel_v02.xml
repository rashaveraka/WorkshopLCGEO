<!-- comment>Calorimeters</comment -->
<detectors>
  <detector name="HcalBarrel" type="SHcalSc04_Barrel_v02" id="ILDDetID_HCAL" readout="HcalBarrelRegCollection" 
	    vis="BlueVis" insideTrackingVolume="false" >
    
    <envelope vis="LightGrayVis">
      <shape type="ILDHcalBarrelEnvelope"
      	     numsides="8" rmin="Hcal_inner_radius" rmax="Hcal_outer_radius" zhalf="TPC_Ecal_Hcal_barrel_halfZ"
      	     material="Air" >
      </shape>
      <position x="0" y="0" z="0"/>
      <rotation x="0" y="0" z="90*deg-180*deg/8"/>
    </envelope>
    
    
    <comment>Hadron Calorimeter Barrel</comment>
    
    <dimensions numsides="8" rmin="Hcal_inner_radius" rmax="Hcal_outer_radius" zhalf="TPC_Ecal_Hcal_barrel_halfZ"  material="Air" />
    
    <staves  material = "Steel235"  vis="BlueVis"/>
    
    <!-- The layer structure reference on page 10 in the following paper-->
    <!-- https://bib-pubdb1.desy.de/record/139781/files/LC-TOOL-2012-082.pdf -->
    <layer repeat="Hcal_nlayers" vis="SeeThrough">
      <slice material = "Air"            thickness = "Hcal_fiber_gap"                                 vis="YellowVis" />
      <slice material = "Cu"             thickness = "Hcal_Cu_thickness"                              vis="Invisible" />
      <slice material = "PCB"            thickness = "Hcal_PCB_thickness"                             vis="Invisible" />
      <slice material = "G4_POLYSTYRENE" thickness = "Hcal_scintillator_thickness" sensitive = "yes"  vis="CyanVis"   />
    </layer>
  </detector>
</detectors>
