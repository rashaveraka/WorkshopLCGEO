<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">
    
    <info name="CLIC New Detector Model"
        title="CLIC NDM"
        author="Marko Petric"
        url="https://twiki.cern.ch/twiki/bin/view/CLIC/Detector"
        status="development"
        version="$Id: 2015-2-2 marko.petric@cern.ch $">
        <comment>The compact format for the CLIC Detector envelopes</comment>
    </info>
    
    <includes>
        <gdmlFile  ref="elements.xml"/>
        <gdmlFile  ref="materials.xml"/>
    </includes>
    
    <define>
        <constant name="world_side" value="30000*mm"/>
        <constant name="world_x" value="world_side"/>
        <constant name="world_y" value="world_side"/>
        <constant name="world_z" value="world_side"/>


	<constant name="VertexBarrel_ID"   value="1"/>
	<constant name="VertexEndcap_ID"   value="2"/>
	<constant name="ForwardTracker_ID" value="3"/>
	<constant name="TrackerBarrel_ID"  value="4"/>
	<constant name="TrackerEndcap_ID"  value="5"/>
	<constant name="ECalBarrel_ID"     value="6"/>
	<constant name="ECalEndcap_ID"     value="7"/>
	<constant name="ECalPlug_ID"       value="8"/>
	<constant name="HCalBarrel_ID"     value="9"/>
	<constant name="HCalEndcap_ID"     value="10"/>
	<constant name="YokeBarrel_ID"     value="11"/>
	<constant name="YokeEndcap_ID"     value="12"/>        
	<constant name="LumiCal_ID"        value="13"/>  
	<constant name="YokeEndcap_ID"     value="14"/>  

	<constant name="DetectorBackward" value="-1"/>
	<constant name="DetectorBarrel"   value=" 0"/>
	<constant name="DetectorForward"  value=" 1"/>

    	<comment>Silicon Tracker</comment>
	<constant name="TrackerInnerR" value="206*mm" />
	<constant name="TrackerOuterR" value="1450*mm"/>
	<constant name="TrackerHalfZ"  value="2300*mm"/>

    	<comment>Electromagnetic Calorimeter</comment>
	<constant name="ECalBarrelInnerR"  value="1500*mm"/>
	<constant name="ECalBarrelOuterR"  value="1659*mm"/>
	<constant name="ECalBarrelHalfZ"  value="2389*mm"/>

	<constant name="ECalEndcapInnerR"  value="410*mm"/>
	<constant name="ECalEndcapOuterR"  value="1400*mm"/>
	<constant name="ECalEndcapInnerZ"  value="2350*mm"/>
	<constant name="ECalEndcapOuterZ"  value="2509*mm"/>

	<constant name="ECalPlugInnerR"  value="200*mm"/>
	<constant name="ECalPlugOuterR"  value="380*mm"/>
	<constant name="ECalPlugInnerZ"  value="2350*mm"/>
	<constant name="ECalPlugOuterZ"  value="2509*mm"/>

    	<comment>Hadronic Calorimeter</comment>
	<constant name="HCalBarrelInnerR"  value="1697*mm"/>
	<constant name="HCalBarrelInnerR"  value="3287*mm"/>
	<constant name="HCalBarrelHalfZ"  value="2389*mm"/>

	<constant name="HCalEndcapInnerR"  value="230*mm"/>
	<constant name="HCalEndcapOuterR"  value="3059*mm"/>
	<constant name="HCalEndcapInnerZ"  value="2539*mm"/>
	<constant name="HCalEndcapOuterZ"  value="4129*mm"/>

    	<comment>Solenoid</comment>
	<constant name="SolenoidInnerR"  value="3440*mm"/>
	<constant name="SolenoidInnerR"  value="4304*mm"/>
	<constant name="SolenoidHalfZ"  value="4129*mm"/>

    	<comment>Yoke</comment>
	<constant name="YokeBarrelInnerR"  value="4418*mm"/>
	<constant name="YokeBarrelInnerR"  value="7004*mm"/>
	<constant name="YokeBarrelHalfZ"  value="4129*mm"/>

	<constant name="YokeEndcapInnerR"  value="610*mm"/>
	<constant name="YokeEndcapOuterR"  value="7004*mm"/>
	<constant name="YokeEndcapInnerZ"  value="4179*mm"/>
	<constant name="YokeEndcapOuterZ"  value="5200*mm"/>


    </define>



    <display>
      <vis name="WhiteVis"         alpha="0.0" r=".96" g=".96"  b=".96"   showDaughters="true"  visible="true"/>
      <vis name="Invisible"        alpha="0.0" r="0"   g="0"    b="0"     showDaughters="false" visible="false"/>
      <vis name="SeeThrough"       alpha="0.0" r="0"   g="0"    b="0"     showDaughters="true"  visible="false"/>
      <vis name="RedVis"           alpha="1.0" r="1.0" g="0.0"  b="0.0"   showDaughters="true"  visible="true"/>
      <vis name="GreenVis"         alpha="1.0" r="0.0" g="1.0"  b="0.0"   showDaughters="true"  visible="true"/>
      <vis name="BlueVis"          alpha="1.0" r="0.0" g="0.0"  b="1.0"   showDaughters="true"  visible="true"/>
      <vis name="CyanVis"          alpha="1.0" r="0.0" g="1.0"  b="1.0"   showDaughters="true"  visible="true"/>
      <vis name="MagentaVis"       alpha="1.0" r="1.0" g="0.0"  b="1.0"   showDaughters="true"  visible="true"/>
      <vis name="YellowVis"        alpha="1.0" r="1.0" g="1.0"  b="0.0"   showDaughters="true"  visible="true"/>
      <vis name="BlackVis"         alpha="1.0" r="0.0" g="0.0"  b="0.0"   showDaughters="true"  visible="true"/>
      <vis name="GrayVis"          alpha="1.0" r="0.5" g="0.5"  b="0.5"   showDaughters="true"  visible="true"/>
    </display>
   
  
    
    <detectors>
        <detector name="Tracker" type="GenericBarrelEnvelope" id="1" vis="BlackVis" >
            <dimensions nsides_inner="0" nsides_outer="0" rmin="100" rmax="400" zhalf="TrackerHalfZ" phi0_offset="45*deg" material = "Air" />
            <position x="0*mm" y="0*mm" z="0*mm"/>
            <rotation x="0*deg" y="0*deg" z="0*deg"/>
        </detector>
    </detectors> 

    

</lccdd>
