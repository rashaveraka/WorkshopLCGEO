<lccdd>
    
    <comment>Tracking detectors</comment>
    <detectors>
        <detector name="InnerTrackers" type="DD4hep_SubdetectorAssembly" vis="OTVis">
            
            <shape type="BooleanShape" operation="Subtraction" material="Air" >
                <shape type="BooleanShape" operation="Subtraction">
                    <shape type="BooleanShape" operation="Subtraction">
                        <shape type="Tube" rmin="InnerTracker_inner_radious" rmax="InnerTracker_outer_radous" dz="InnerTracker_half_lenght"/>
                        <shape type="Tube" rmin="0." rmax="100*mm" dz="780*mm" />
                    </shape>
                    <shape type="Cone" rmin1="0" rmax1="CentralBeamPipe_rmax" rmin2="0" rmax2="ConeBeamPipe_rmax" z="(ConeBeamPipe_zmax-CentralBeamPipe_zmax)/2."/>
                    <position x="0" y="0" z="(ConeBeamPipe_zmax-CentralBeamPipe_zmax)/2." />
                </shape>
                <shape type="Cone" rmin1="0" rmax1="ConeBeamPipe_rmax" rmin2="0" rmax2="CentralBeamPipe_rmax" z="(ConeBeamPipe_zmax-CentralBeamPipe_zmax)/2."/>
                <position x="0" y="0" z="-(ConeBeamPipe_zmax-CentralBeamPipe_zmax)/2." />
            </shape>
            
            <comment>Outer Tracker Assembly</comment>
            <composite name="InnerTrackerBarrel"/>
            <composite name="InnerTrackerEndcap"/>
        </detector>
    </detectors>
    
    
</lccdd>



