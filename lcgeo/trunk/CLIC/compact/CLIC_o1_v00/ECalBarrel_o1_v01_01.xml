<!-- ====================================================================== -->
<!--                                                                        -->
<!--    XML description of the complete SiD tracker detector                -->
<!--    of the SiD linear collider detector design.                         -->
<!--                                                                        -->
<!--    Contained are the required                                          -->
<!--      ++ global constants used uniquely by this module                  -->
<!--      ++ visualization attributes                                       -->
<!--      ++ the definition of the readout structure and the                -->
<!--         readout segmentation (if necessary)                            -->
<!--      ++ the include statements for the sensitive detectors and         -->
<!--         the corresponding support structure(s)                         -->
<!--                                                                        -->
<!--                                                                        -->
<!--   @author  M.Frank                                                     -->
<!--   @date    14/11/2014                                                  -->
<!--   modified by D.Protopopescu 17/03/2015                                -->
<!--                                                                        -->
<!-- ====================================================================== -->

<lccdd>
    
    <!--  Definition of the used visualization attributes    -->
    <display>
        <vis name="EcalBarrelVis"       alpha="1.0" r="1.0"  g="0.8"  b="0.0"  showDaughters="true" visible="false"/>
        <vis name="EcalStaveVis"        alpha="1.0" r="0.0"  g="0.8"  b="1.0"  showDaughters="true" visible="true"/>
        <vis name="EcalLayerVis"        alpha="1.0" r="0.8"  g="0.8"  b="0.0"  showDaughters="true" visible="true"/>
        
        <vis name="EcalSensitiveVis"    alpha="1.0" r="0.7"  g="0.3"  b="0.0"  showDaughters="false" visible="true"/>
        <vis name="EcalAbsorberVis"     alpha="1.0" r="0.4"  g="0.4"  b="0.0"  showDaughters="false" visible="true"/>
        
        <vis name="EcalEndcapVis"       alpha="1.0" r="0.77" g="0.74" b="0.86" showDaughters="true" visible="true"/>
    </display>
    
    <!--  Definition of the readout segmentation/definition  -->
    <readouts>
        <readout name="EcalBarrelHits">
            <segmentation type="CartesianGridXY" grid_size_x="5.1" grid_size_y="5.1" />
            <id>system:8,barrel:3,module:4,layer:6,slice:5,x:32:-16,y:-16</id>
        </readout>
    </readouts>
    
    <!--  Includes for sensitives and support                -->
    <detectors>
        <detector id="EcalBarrel_ID" name="EcalBarrel" type="ECalBarrel_o1_v01" readout="EcalBarrelHits" vis="EcalBarrelVis" calorimeterType="EM_BARREL">
            
            <comment>Electromagnetic Calorimeter Barrel</comment>

            <dimensions numsides="(int) CaloSides" rmin="EcalBarrel_rmin" z="EcalBarrel_zmax*2" />
            <staves vis="EcalStaveVis"/>
            <layer repeat="1" vis="EcalLayerVis"><!-- total 2.4 mm -->
                <slice material = "Air"      thickness = "0.25*mm" vis="InvisibleNoDaughters"/>
                <slice material = "Copper"   thickness = "1.30*mm" vis="EcalAbsorberVis"/><!-- PCB -->
                <slice material = "Air"      thickness = "0.10*mm" vis="InvisibleNoDaughters"/><!-- glue -->
                <slice material = "Silicon"  thickness = "0.50*mm" sensitive="yes" limits="cal_limits" vis="EcalSensitiveVis"/>
                <slice material = "Kapton"   thickness = "0.10*mm" vis="EcalAbsorberVis"/>
                <slice material = "Air"      thickness = "0.15*cm" vis="InvisibleNoDaughters"/><!-- fiber -->
            </layer>
            <layer repeat="17" vis="EcalLayerVis"><!-- total 5.0 mm -->
                <slice material = "TungstenDens24" thickness = "2.50*mm" vis="EcalAbsorberVis"/>
                <slice material = "Air"      thickness = "0.25*mm" vis="InvisibleNoDaughters"/><!-- fiber -->
                <slice material = "Kapton"   thickness = "0.10*mm" vis="EcalAbsorberVis"/>
                <slice material = "Silicon"  thickness = "0.50*mm" sensitive="yes" limits="cal_limits" vis="EcalSensitiveVis"/>
                <slice material = "Air"      thickness = "0.10*mm" vis="InvisibleNoDaughters"/><!-- glue -->
                <slice material = "Copper"   thickness = "1.30*mm" vis="EcalAbsorberVis"/><!-- PCB -->
                <slice material = "Air"      thickness = "0.25*mm" vis="InvisibleNoDaughters"/>
            </layer>
            <layer repeat="8" vis="EcalLayerVis"><!-- total 7.5 mm -->
	        <slice material = "TungstenDens24" thickness = "5.00*mm" vis="EcalAbsorberVis"/>
                <slice material = "Air"      thickness = "0.25*mm" vis="InvisibleNoDaughters"/><!-- fiber -->
		<slice material = "Kapton"   thickness = "0.10*mm" vis="EcalAbsorberVis"/>
		<slice material = "Silicon"  thickness = "0.50*mm" sensitive="yes" limits="cal_limits" vis="EcalSensitiveVis"/>
		<slice material = "Air"      thickness = "0.10*mm" vis="InvisibleNoDaughters"/><!-- glue -->
		<slice material = "Copper"   thickness = "1.30*mm" vis="EcalAbsorberVis"/><!-- PCB -->
		<slice material = "Air"      thickness = "0.25*mm" vis="InvisibleNoDaughters"/>
            </layer>
            <layer repeat="1" vis="EcalLayerVis">
                <slice material = "TungstenDens24" thickness = "5.00*mm" vis="EcalAbsorberVis"/>
            </layer>
        </detector>
    </detectors>

</lccdd>
