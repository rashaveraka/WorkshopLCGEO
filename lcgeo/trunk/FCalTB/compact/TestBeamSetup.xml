        <slice material = "TungstenDens24" thickness = "3.5*mm"   vis="TungstenVis"   type="Square"             />
        <slice material = "Air"            thickness = "1.18*mm"  vis="AirVis"        type="Square"             />
        <slice material = "Silicon"        thickness = "0.32*mm"  vis="SensorVis"     type="Arc"     sensitive = "yes" />
        <slice material = "Copper"         thickness = "0.005*mm" vis="CuVis"         type="Square"              />
        <slice material = "G10"            thickness = "2.490*mm" vis="PCBVis"        type="Square"              />
        <slice material = "Copper"         thickness = "0.005*mm" vis="CuVis"         type="Square"              />
        <slice material = "Air"            thickness = "1.5*mm"   vis="AirVis"        type="Square"              />
