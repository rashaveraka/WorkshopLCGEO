<detector name="EcalEndcap" type="hedra_tube_symmetry_envelope" id="ILDDetID_ECAL" readout="EcalEndcapsCollection" vis="BlueVis" >

    <comment>EM Calorimeter Endcap</comment>
    <!-- This is a more generaic driver.      -->
    <!-- PolyhedraRegular with tube hole      -->
    <!-- envelope includes symmetry endcaps   -->
    <!-- The envelope is position at (0,0,0)  -->
    <!-- and rotation by (0,0,0) by default.  -->
    <dimensions numsides="nsides" rmin="300*mm" rmax="2500*mm" zhalf="300*mm" zstart="2300*mm" material = "Air" />
    <position x="0*mm" y="0*mm" z="0*mm"/>
    <rotation x="0*deg" y="0*deg" z="90*deg-180*deg/nsides"/>

    <staves  material = "TungstenDens24"  vis="BlueVis"/>

    <layer repeat="30" vis="SeeThrough" >
        <slice material = "G4_AIR"         thickness = "0.5*mm"                vis="Invisible" />
    </layer>
</detector>
