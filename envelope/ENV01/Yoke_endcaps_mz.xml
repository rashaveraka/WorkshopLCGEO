<detector name="YokeEndcapMZ" type="polyhedra_envelope" id="ILDDetID_ECAL" readout="YokeEndcapsCollection" vis="YellowVis" >

    <comment>EM Calorimeter Barrel</comment>
    <!-- This is a more generaic driver.      -->
    <!--  PolyhedraRegular envelope           -->
    <!-- The envelope is position at (0,0,0)  -->
    <!-- and rotation by (0,0,0) by default.  -->
    <dimensions numsides="12" rmin="600*mm" rmax="8800*mm" zhalf="1500*mm"  material = "Air" />
    <position x="0*mm" y="0*mm" z="-6600*mm"/>
    <rotation x="0*deg" y="0*deg" z="90*deg-180*deg/12"/>

    <staves  material = "TungstenDens24"  vis="BlueVis"/>

    <layer repeat="30" vis="SeeThrough" >
        <slice material = "G4_AIR"         thickness = "0.5*mm"                vis="Invisible" />
    </layer>
</detector>
